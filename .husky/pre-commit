#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run linting first to catch code quality issues
npm run lint

# Run unit tests
npm run test:unit

# Run integration tests if Things3 is available
if command -v osascript >/dev/null 2>&1; then
  echo "ğŸš¨ Running integration tests with Things3..."
  npm run test:integration
else
  echo "âŒ Skipping integration tests (macOS/AppleScript not available)"
fi